# =============================================================================
# CareFlow Pulse - Frontend Environment Variables (Template)
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# =============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=CareFlow Pulse

# ============================================================================
# API CONFIGURATION
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
API_SECRET_KEY=your-api-secret-key-here

# ============================================================================
# FIREBASE CLIENT CONFIGURATION (Public)
# ============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# ============================================================================
# FIREBASE ADMIN SDK (Server-Side Only)
# ============================================================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# ============================================================================
# AUTHENTICATION (NextAuth.js)
# ============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-min-32-characters-long
NEXTAUTH_URL=http://localhost:3000

# ============================================================================
# GOOGLE CLOUD CONFIGURATION (Production)
# ============================================================================
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_SERVICE_ACCOUNT_KEY_BASE64=your-base64-encoded-service-account-key
REASONING_ENGINE_ID=your-reasoning-engine-id
AGENT_ENGINE_ENDPOINT=https://your-agent-endpoint.run.app
ADK_APP_NAME=careflow-pulse-agent

# ============================================================================
# RATE LIMITING (Upstash Redis - Optional)
# ============================================================================
UPSTASH_REDIS_REST_URL=your-redis-url
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ============================================================================
# MONITORING & ANALYTICS (Optional)
# ============================================================================
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id

# ============================================================================
# REQUEST LOGGING (Production)
# ============================================================================
ENABLE_REQUEST_LOGGING=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NEXT_PUBLIC_ENABLE_AI_AGENT=false
NEXT_PUBLIC_ENABLE_SMS_ALERTS=false
NEXT_PUBLIC_ENABLE_AUDIT_LOGS=true
