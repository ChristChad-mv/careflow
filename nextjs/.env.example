# =============================================================================
# CareFlow Pulse - Environment Variables Template
# Copy this file to .env.local and fill in the values
# =============================================================================

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=CareFlow Pulse

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
API_SECRET_KEY=

# Firebase Configuration (Public / Client SDK)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Authentication (NextAuth.js)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_SERVICE_ACCOUNT_KEY_BASE64=
REASONING_ENGINE_ID=
AGENT_ENGINE_ENDPOINT=
ADK_APP_NAME=careflow-pulse-agent

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Monitoring & Analytics (Optional)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_AGENT=false
NEXT_PUBLIC_ENABLE_SMS_ALERTS=false
NEXT_PUBLIC_ENABLE_AUDIT_LOGS=true

# Twilio Configuration
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
